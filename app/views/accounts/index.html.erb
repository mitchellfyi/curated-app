<h1>Accounts</h1>

<div id="accounts">
  <% @accounts.each do |account| %>
    <p>
      <%= link_to (account.name || account.host), account %>
      <% if policy(account).update? %>
        <%= link_to "Edit", edit_account_path(account) %>
      <% end %>
    </p>
  <% end %>
</div>

<%= link_to "New account", new_account_path %>
